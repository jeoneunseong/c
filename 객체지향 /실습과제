import java.awt.*;
import javax.swing.*;

public class GUIExample
{
	public static void main(String[] args) {
		
		JFrame frame = new JFrame("GUT Examole");
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		
		JPanel primaryPanel = new JPanel();
		primaryPanel.setPreferredSize(new Dimension(400,200));
		primaryPanel.setBackground(Color.white);
		
		JLabel lblText = new JLabel("Text Example");
		lblText.setFont(new Font ("Verdana", Font.BOLD+Font.ITALIC, 20));
		lblText.setForeground(Color.blue);
		primaryPanel.add(lblText);
		
		frame.getContentPane().add(primaryPanel);
		frame.pack();
		frame.setVisible(true);
	}
}
